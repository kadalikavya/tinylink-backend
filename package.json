{
  "name": "tinylink",
  "version": "1.0.0",
  "description": "TinyLink URL shortener (Express + Postgres)",
  "main": "src/server/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "build:css": "tailwindcss -i ./src/pages/layout.css -o ./src/public/styles.css --minify",
    "watch:css": "tailwindcss -i ./src/pages/layout.css -o ./src/public/styles.css --watch"
  },
  "dependencies": {
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "nodemon": "^3.1.0"
  }
}
